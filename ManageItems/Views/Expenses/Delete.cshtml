@model AppointmentApp.Models.Expense;
@{
    ViewData["Title"] = "Create expenses";
}

<form method="post" asp-controller="Expenses" asp-action="DeletePost">
    <input type="hidden" asp-for="Id"/>
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-black-50 pl-3">Delete Item</h2>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-6">
                        <label asp-for="Name"></label>
                    </div>
                    <div class="col-6">
                        <label asp-for="Amount"></label>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-6">
                        <input asp-for="Name" class="form-control" disabled/>
                    </div>
                    <div class="col-6">
                        <input asp-for="Amount" class="form-control" disabled/>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-8 offset-2 row">
                        <div class="col">
                            <input type="submit" class="btn btn-outline-danger w-75" value="Delete"/>
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-outline-primary w-75">Back</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
