@model IEnumerable<Expense>
@{
    ViewData["Title"] = "Expenses";
}

<div class="container p-3">

    <div class="row pt-3">
        <div class="col-6">
            <h2 class="text-primary">All Expenses</h2>
        </div>
        <div class="col-6  text-right">
            <a class="btn btn-outline-primary" asp-controller="Expenses" asp-action="Create">Add Expenses</a>
        </div>
    </div>
    <div class="row p-3">
        @if (Model.Any())
        {
            <table class="table table-bordere table-striped" style="width: 100%">
                <thead>
                    <tr>
                        <th>Expense Name</th>
                        <th>Expense Amount</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var e in Model)
                    {
                        <tr>
                            <td width="25%">@e.Name</td>
                            <td width="25%">@string.Format(new CultureInfo("en-NG"), "{0:c}", @e.Amount)</td>
                            <td width="25%">@e.ExpenseCategory.Name</td>
                            <td width="25%">
                                <div class="w-100 btn-group" role="group">
                                    <a class="btn btn-outline-primary mx-1" asp-route-id="@e.Id" asp-controller="Expenses" asp-action="Update">Update</a>
                                    <a class="btn btn-outline-danger mx-1" asp-route-id="@e.Id" asp-controller="Expenses" asp-action="Delete">Delete</a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p>No Items available</p>
        }
    </div>
</div>
